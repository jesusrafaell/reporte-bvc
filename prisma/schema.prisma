datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  // change to `go run github.com/prisma/prisma-client-go` for Go
  provider = "prisma-client-js"
}

model IdentType {
  id        Int      @id @default(autoincrement())
  name      String 
  createdAt DateTime @default(now())
  user User[]
  commerce Commerce[]
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  identType IdentType @relation(fields: [identTypeId], references: [id])
  identTypeId Int
  identNum String
}

model Commerce{
  id        Int      @id @default(autoincrement())
  name      String 
  identType IdentType @relation(fields: [identTypeId], references: [id])
  identTypeId Int
  identNum String
  createdAt DateTime @default(now())
}

model Afiliado {
  id        Int      @id @default(autoincrement())
  idCommerce Int
  idUser    Int
  createdAt DateTime @default(now())
}