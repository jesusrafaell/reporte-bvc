datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  // change to `go run github.com/prisma/prisma-client-go` for Go
  provider = "prisma-client-js"
}

model IdentType {
  createdAt DateTime @default(now())
  id        Int      @id @default(autoincrement())
  name      String 
  //Relations
  user      User[]
  commerce  Commerce[]
}

model User {
  createdAt   DateTime @default(now())
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  identTypeId Int
  identNum    String
  //Relations
  identType   IdentType @relation(fields: [identTypeId], references: [id])
  afiliado    Afiliado[]
}

model Commerce{
  id            Int      @id @default(autoincrement())
  name          String 
  identTypeCc   IdentType @relation(fields: [idTypeCcId], references: [id])
  idTypeCcId    Int
  identNum      String
  //Relations
  afiliado      Afiliado?
  createdAt     DateTime @default(now())
}

model Afiliado {
  id        Int      @id @default(autoincrement())
  numA      Int
  userId    Int
  ccId      Int
  //Relations
  user      User     @relation(fields: [userId], references: [id])
  cc        Commerce @relation(fields: [ccId], references: [id],  onUpdate: NoAction)
  createdAt DateTime @default(now())
}